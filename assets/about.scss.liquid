.page-container {
    background-color: #1d1b19
}

.section-header h1,.section-header h2 {
    margin-top: 30px;
}

.section-header h2 {
    font-size: 36px
}

.section-header h2 small {
    color: #fff;
    font-size: 16px
}

.section-header h3 {
    color: #fff;
    font-size: 18px;
    font-weight: 100
}

.section-header a {
    color: #fff;
    background-color: #1d1b19;
    border: 1px solid #fff;
    height: 50px;
    display: inline-block;
    line-height: 50px;
    width: 200px;
    margin-top: 20px;
    border-radius: 2px;
    text-transform: uppercase
}

.about-banner {
    height: 600px;
    background-repeat: no-repeat;
    background-position: center;
    background-size: contain;
    margin-top: 100px
}

.about-banner .page-width {
    position: relative;
    width: 100%
}

.about-banner-content {
    background-color: #fff;
    font-size: 14px;
    color: #000;
    padding: 60px;
    width: 550px;
    position: absolute;
    left: 10%;
    top: -30px
}

.about-banner-content h3 {
    margin: 20px 0 0 0;
    font-size: 24px
}

.about-allure {
    background-color: #f8f3ed;
    padding: 60px 0
}

.about-allure .allure-devider {
    margin: 0 0 60px 0
}

.about-allure .flex {
    margin-bottom: 60px
}

.about-allure h3 {
    color: #357284;
    text-transform: uppercase;
    font-size: 18px;
    margin: 0
}

.about-allure h4 {
    font-size: 16px;
    margin: 0 0 36px 0;
    font-weight: 100
}

.about-allure p {
    font-size: 18px;
    margin: 0;
    color: #000
}

.allure-testimonials-left {
    background-color: #b09350;
    padding: 75px;
    display: flex;
    justify-content: flex-end
}

.allure-testimonials-left>div {
    text-align: center
}

.allure-testimonials-left h2 {
    font-family: initial;
    font-style: italic;
    font-size: 36px;
    text-transform: capitalize;
    margin: 0;
    color: #000
}

.allure-testimonials-left h3 {
    color: #fff;
    font-weight: normal;
    text-transform: uppercase;
    font-size: 34px;
    -webkit-text-stroke: 1px #ad9451
}

.allure-testimonials-left .line {
    height: 1px;
    background: #000;
    width: 160px;
    margin: auto
}

.allure-testimonials-right {
    padding: 75px;
    max-width: 800px
}

.allure-testimonials-slider p {
    color: #fff;
    font-style: italic;
    font-size: 26px;
    padding-bottom: 20px;
    font-family: initial;
    letter-spacing: 0.2px;
}
.allure-testimonials-slider .allure-testimonial-name{
	color: #fff;
  	text-align:right;
}

.allure-testimonials-slider.slick-slider .slick-dots {
    width: 100%;
    padding-top: 30px;
}

.site-footer {
    margin: 0
}
