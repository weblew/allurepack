.bundles {
    padding-top: 30px
}

.bundle {
    padding-bottom: 30px;
    padding-top: 30px;
    border-bottom: 1px solid #ccc
}

.bundle-image {
    width: 100%;
    padding-bottom: 70%;
    background-position: center;
    background-size: contain;
    background-repeat: no-repeat;
    margin-bottom: 30px;
}
.bundle h2{
    margin-bottom:2px;
}
.bundle h6{
	margin-bottom:4px;
}
.qty-input {
    width: 100px
}

.bundle-items {
    margin: 0px -10px 20px -10px
}

.bundle-items .item {
    padding: 0 10px;
    width: 16.666666666666668%
}

.bundle-items .item .bundle-item-title {
    font-size: 14px;
    padding: 10px 0
}

.bundle-items .item .bundle-item-image {
    background-position: center;
    background-size: contain;
    background-repeat: no-repeat;
    width: 100%;
    padding-bottom: 100%
}

.bundle-color {
    width: 30px;
    height: 30px;
    margin: 0 8px 0 0;
    border: 1px solid #ccc;
    cursor: pointer;
    background-size: contain;
    position: relative
}

.bundle-color.selected {
    box-shadow: inset 0px 0px 0px 4px #fff;
    border: 1px solid #000
}

.bundle-color .color-name {
    position: absolute;
    background-color: #fff;
    width: auto;
    bottom: 110%;
    white-space: nowrap;
    text-transform: capitalize;
    justify-content: center;
    z-index: 999;
    left: 50%;
    transform: translateX(-50%);
    background-color: #000;
    color: #fff;
    padding: 2px 14px;
    border-radius: 2px;
    margin-bottom: 6px;
    opacity: 0;
    visibility: hidden;
    display: block;
    transition: all 500ms
}

.bundle-color .color-name:after {
    content: '';
    position: absolute;
    border-left: 6px solid transparent;
    border-right: 6px solid transparent;
    border-top: 6px solid #000;
    width: 0;
    height: 0;
    top: 100%;
    left: 50%;
    margin-left: -6px
}

.bundle-color:hover .color-name {
    opacity: 1;
    visibility: visible;
    background-color: #000
}

.bundle-color .color-name:hover {
    display: none
}



.bundle-component-spinner {
  margin: 60px auto 0 auto !important;
  position: relative;
  -webkit-transform: translateZ(0);
  -ms-transform: translateZ(0);
  transform: translateZ(0);
  -webkit-animation: bundle-component-spinner-animation 0.7s infinite cubic-bezier(0.67, 0.35, 0.7, 0.8);
  animation: bundle-component-spinner-animation 0.7s infinite cubic-bezier(0.67, 0.35, 0.7, 0.8);
  border-radius: 50%;
  width: 60px;
  height: 60px;
  -ms-transform-origin: 50% 50%;
  -webkit-transform-origin: 50% 50%;
  transform-origin: 50% 50%; 
}
.bundle-component-spinner:after {
    border-radius: 50%;
    width: 60px;
    height: 60px; 
}

@-webkit-keyframes bundle-component-spinner-animation {
  0% {
    -webkit-transform: rotate(90deg);
    transform: rotate(90deg); 
  }
  100% {
    -webkit-transform: rotate(450deg);
    transform: rotate(450deg); 
  } 
}

@keyframes bundle-component-spinner-animation {
  0% {
    -webkit-transform: rotate(90deg);
    transform: rotate(90deg); 
  }
  100% {
    -webkit-transform: rotate(450deg);
    transform: rotate(450deg); 
  } 
}

.bundle-component-spinner {
  border-top: 3px solid #eaeaea;
  border-right: 3px solid #eaeaea;
  border-bottom: 3px solid #eaeaea;
  border-left: 3px solid #c6c6c6;
}