    background-position: -41px 0px;
}
.item-logo-printing-color.Bronze{
    background-position: -62px 0px;
}
.item-logo-printing-color.Red{
    background-position: -83px 0px;
}
.item-logo-printing-color.Magenta{
    background-position: -104px 0px;
}
.item-logo-printing-color.Purple{
    background-position: -125px 0px;
}
.item-logo-printing-color.Blue{
    background-position: -145px 0px;
}
.item-logo-printing-color.Light-Blue{
    background-position: -166px 0px;
}
.item-logo-printing-color.Teal{
    background-position: -187px 0px;
