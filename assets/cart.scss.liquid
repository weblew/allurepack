.item-logo-printing-color.Gloss-Teal{
    background-position: -140px 0px;
}
                                             
.qty-box-wrapper{
	width: 92px;
}
.qty-box{
  	width: 100%;
      padding: 16px 20px;
      box-shadow: 0 0 0 1px #f0f2f4;
      border: 1px solid rgba(17, 16, 15, 0.25);
      background-size: 13px;
      background-position: 57px center;
}
.cart-item-remove{
    color: #895F67;
    font-size: 14px;
    font-weight: 400;
    line-height: normal;
    text-decoration-line: underline;
    text-align:right;
}
.checkout-top{
	justify-content: space-between;
    align-items:center;
    margin-bottom: 40px;
}
.checkout-top h1{
	text-transform:capitalize;
}
.cart-totals h3{
    color: #2F2923;
    font-size: 28px;
    font-weight: 400;
    line-height: normal;
    margin-bottom: 0;
    padding-top: 15px;
}
.cart-totals-disclaimer{
    color: #828282;
    font-size: 14px;
    font-weight: 400;
    line-height: normal;
    padding-bottom: 15px;
    border-bottom:1px solid rgba(47, 41, 35, .1);
    margin-bottom: 35px;
}

.cart-totals>.flex {
    justify-content: space-between;
    padding: 0 0 15px 0;
    font-size:16px;
    font-weight:500;
}

.cart-totals>.flex small{
    color: #828282;
    font-size: 14px;
    font-weight: 400;
    line-height: normal;
    display:block;
}

.cart-totals .btn{
    width:100%;
    line-height: 32px;
}
.cart-note{
    border-top:1px solid rgba(47, 41, 35, .1);
    border-bottom:1px solid rgba(47, 41, 35, .1);
    margin-top: 5px;
    padding-top: 20px;
    padding-bottom: 20px;
}
.cart-note__label{
    color: #828282;
    font-size: 15px;
    font-weight: 400;
    line-height: normal;
    display:block;
}
.cart-note__input{
    height: 44px;
    width: 100%;
    min-height: 44px;
    border: 1px solid rgba(130, 130, 130, 0.50);
    transition:300ms;
    margin: 0;
}
.cart-note__input:focus{
    min-height:64px;
}
.bundle-tag {
    color: #fff;
    background-color: #000;
    display: inline-block;
    padding: 0px 10px 0 14px;
    height: 26px;
    line-height: 26px;
    position: relative;
}

.bundle-tag:after {
    content: '';
    border: 13px solid #fff;
    width: 0;
    border-left-color: #000;
    height: 0;
    display: inline-block;
    position: absolute;
    left: 100%;
}

.cart-freegift{
	margin-bottom: 20px;
    padding: 20px;
    margin-top: 10px;
    background-color: rgba(197, 160, 76, .18);
  	.cart-freegift-img{
      	padding-right:40px;
      padding-left:20px;
        img{
            mix-blend-mode: multiply;
        }
    }
}

@media only screen and (max-width: 960px) {
    .cart-grid{
        gap:40px;
    }
    .cart-items-header{
        display:none;
    }
    .cart-item-logo-wrapper {
        padding-left: 0px;
    }
    .cart-item-image{
        width: 80px;
        height: 80px;
        background-color: #fff;
        margin-right: 20px;
    }
    .cart-item-plate {
        margin:0 20px 0 0;
    }
    .cart-item-info {
        max-width: calc(100% - 100px);
    }
    .cart-item-remove{
        text-align: left;
    }
    .cart-item-remove a,
    .cart-item-total{
        display: block;
        padding: 20px 0;
    }
}