.cart-grid{
    gap:120px;
    margin-bottom: 80px;
}
.cart-left{
    flex:auto;
}

.cart-right{
    width: 400px;
}

.cart-items-header{
  	padding:15px 0px;
  	margin-bottom:10px;
  	font-weight:500;
    border-bottom:1px solid rgba(47, 41, 35, .1);
    
}

.cart-collection-item{	
  	padding:40px 0px;
  	border-bottom:1px solid rgba(47, 41, 35, .1);
}
.cart-item-image{
	width: 140px;
    height: 140px;
    background-position: center;
    background-size: contain;
    background-repeat: no-repeat;
    background-color: #fff;
    margin-right: 40px;
}
.cart-item-plate{
    height: 80px;
    margin:-20px 40px -20px 0;
    border: 1px solid rgba(47, 41, 35, 0.10);
}
.cart-item-info{
    flex:auto;
    max-width:370px;
}
.cart-item-sku{
    color: #2F2923;
    line-height: normal;
    opacity: .5;
    margin-bottom: 10px;
}
.cart-item-title{
    color: #2F2923;
    font-weight: 500;
    line-height: normal;
    
    display:block;
    white-space: pre-line;
}

.cart-item-options{
    color: #2F2923;
    font-size: 14px;
    font-weight: 400;
    line-height: normal;
    opacity: .7;
    margin-top: 10px;
}
.cart-item-price{
    color: #2F2923;
    font-weight: 400;
    line-height: normal;
}


.cart-item-total{
    color: #2F2923;
    font-size: 16px;
    font-weight: 700;
    line-height: normal;
}
.cart-item-logo-wrapper{
    padding-left: 180px;
}
.cart-item-logo{
	border-top:1px solid rgba(47, 41, 35, .1);
    padding-top: 20px;
  	position:relative;
    color: #2F2923;
}
.cart-item-logo .logo-edit-link{
	justify-content: space-between;
    align-items: center;
    color: #2F2923;
    font-size: 14px;
    font-weight: 400;
    line-height: normal;
    letter-spacing: 2.24px;
    text-transform: uppercase;
}
.cart-item-logo .stamp-location{
    text-transform:capitalize;
    font-size: 16px;
    width: 100%;
    font-weight: 500;
    line-height: normal;
    margin-bottom: 6px;
}
.cart-item-logo .logo-preview{
	margin-top:10px;
    border: 1px solid rgba(47, 41, 35, 0.10);
    background: #FFF;
    padding: 15px;
    max-width: 350px;
}
.cart-item-logo .logo-preview > div{
    min-width: 50%;
}
.cart-item-logo .stamp-preview{
    padding: 0;
    border: none;
    height: auto;
    margin: 0;
}
.cart-item-logo .stamp-preview .stamp-preview-image{
    display: block;
}
.cart-item-logo .item-logo-properties{
    margin-top: 4px;
}
.item-logo-printing-color{
    width: 18px;
    min-width: 18px;
    height: 18px;
    border-radius:50%;
    margin-right: 7px;
    display: block;
    background-size: cover;
}
.item-logo-printing-color-gloss{
    background-image:url(//allurepack.myshopify.com/cdn/shop/files/gloss-colors.png?v=4959450973768922986);
}
.item-logo-printing-color-met{
    background-image:url(//allurepack.myshopify.com/cdn/shop/files/metallic-colors.png?v=9415189780474405847);
}
