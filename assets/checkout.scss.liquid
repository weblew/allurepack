html, body {
    margin: 0;
    width: 100%;
    height: 100%;
  	font-family: sans-serif;
}
body{
	display: flex;
    flex-direction: column;
    flex: 1 0 auto;
    -webkit-box-flex: 1;
}
.content {
    overflow: hidden;
  	display: flex;
    flex-direction: column;
    flex: 1 0 auto;
}
.wrap{
	padding: 0 5%;
    width: 90%;
    max-width: 78.57143em;
  	display:flex;
  	margin:auto;
   flex: 1 0 auto;
  	.main{
    	width: 52%;
    	padding-right: 6%;
      	padding-top:4em;
    }
  	.side{
    	width: 38%;
    	padding-left: 4%;
      	padding-top:4em;
      	color:#535353;
      	position: relative;
      	&:after{
        	box-shadow:1px 0 0 #e1e1e1 inset;
      		background: #fafafa;
            content: "";
            display: block;
            width: 300%;
            position: absolute;
            top: 0;
            left: 0;
            bottom: 0;
            z-index: -1;
        }
    }
}