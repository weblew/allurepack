.page-container {
    background-color: #f8f3ed;
  	.sample-content{
    	max-width:1050px;
      	margin:0 auto 0px;
      	h4{
        	margin-bottom:0;
        }
    }
  	.main-content{
        form{
            max-width:720px;
            margin:auto;
            background-color:#fff;
            padding:40px;
          .sample-warning{
          	font-size:14px;
            margin-bottom:20px;
          }
            h3{
                font-size:22px;
                margin-bottom:4px;
            }
            label{
                margin-bottom:0;
            }
            input,textarea, select{
                width:100%;
                margin-bottom:20px;
            }
          	input[type=radio]{
            	width:auto;
              	position: relative;
                width: 16px;
                height: 16px;
                top: 3px;
                margin: 0;
            }
        }
    }
}

.sample-dropdown{

	width:100%;
  	margin:0 0 30px 0;
}