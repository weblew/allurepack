.shop-boxes-container {
    margin: 0 -10px
}

.shop-page-boxes {
    padding: 0
}

.shop-box {
    border: 10px solid #1d1c19;
    overflow: hidden;
}

.shop-box-inner {
    height: 355px;
    background-size: cover;
    background-color: #b9bbbe;
    position: relative;
    transition: all 500ms
}

.shop-box-inner:hover {
    opacity: 1;
    transform: scale(1.1)
}

.shop-box-inner:after {
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    transition: background 400ms
}

.shop-box-inner:hover:after {
    background-color: rgba(0,0,0,0.6)
}

.box-text {
    position: absolute;
    right: 40px;
    bottom: 20px;
    text-align: center
}

.box-text-small {
    color: #686768
}
.shop-box-inner:hover .box-text {
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: #fff;
    z-index: 99
}


.shop-box-inner:hover .box-text-small {
    color: #fff
}
.shop-btn{
	display:none;
  	border: 1px solid #fff;
    min-width: 150px;
