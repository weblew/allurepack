<div data-section-id="{{ section.id }}" class="images-texts-section {{section.settings.css_class}}"
    data-section-type="images-texts-section">
    {% if section.settings.sub_title != blank %}
    <div class="section-title">
        <svg width="16" height="20" viewBox="0 0 16 20" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path
                d="M3.42254 4.53809H0C0.614301 4.88912 1.8429 5.80179 1.8429 6.64426V19.5446H10.7344V17.9649H3.42254V4.53809Z"
                fill="#C7A049" />
            <path
                d="M12.5775 4.53809H16C15.3857 4.88912 14.1571 5.80179 14.1571 6.64426V19.5446H9.15493V17.965H12.5775V4.53809Z"
                fill="#C7A049" />
            <path
                d="M5.44889 1.11568C4.92235 0.852412 3.68978 1.00726 3.86926 1.90554C4.13257 2.9586 4.92239 3.22189 7.23914 3.22189C6.76525 2.16858 5.97543 1.37896 5.44889 1.11568Z"
                fill="#C7A049" stroke="#C7A049" stroke-width="0.5" />
            <path
                d="M10.8126 1.11568C11.3391 0.852412 12.5717 1.00726 12.3922 1.90554C12.1289 2.9586 11.3391 3.22189 9.02234 3.22189C9.49622 2.16858 10.286 1.37896 10.8126 1.11568Z"
                fill="#C7A049" stroke="#C7A049" stroke-width="0.5" />
        </svg>
        {{section.settings.sub_title}}
    </div>
    {% endif %}
    {{section.settings.title}}

    <div class="images-texts-items">
        {% for block in section.blocks %}
        <div class="images-texts-item">
            <div class="image">
                <img src="{{block.settings.image | img_url: 'master'}}" />
            </div>
            <div class="content">
                <div class="content-inner">
                    {{block.settings.content}}
                    <div class="btns">
                        {%if block.settings.button1text != blank %}
                        <a href="{{block.settings.button1Url}}"
                            class="btn {{block.settings.button1Class}}">{{block.settings.button1text}}</a>
                        {% endif %}
                        {%if block.settings.button2text != blank %}
                        <a href="{{block.settings.button2Url}}"
                            class="btn {{block.settings.button2Class}}">{{block.settings.button2text}}</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>

</div>


{% schema %}
{
"name": "Image Text",
"settings": [
    {
        "type": "text",
        "id": "sub_title",
        "label": "Sub Title"
    },
    {
        "type": "richtext",
        "id": "title",
        "label": "Title"
    },
    {
        "type": "text",
        "id": "css_class",
        "label": "CSS Class"
    }
],
"blocks": [{
    "type": "item",
    "name": "Items",
    "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            }, {
                "type": "richtext",
                "id": "content",
                "label": "Content"
            }, {
                "type": "text",
                "id": "button1text",
                "label": "Button One Text"
            }, {
                "type": "url",
                "id": "button1Url",
                "label": "Button One Url"
            }, {
                "type": "text",
                "id": "button1Class",
                "label": "Button One Class"
            }, {
                "type": "text",
                "id": "button2text",
                "label": "Button Two Text"
            }, {
                "type": "url",
                "id": "button2Url",
                "label": "Button Two Url"
            }, {
                "type": "text",
                "id": "button2Class",
                "label": "Button Two Class"
            }
        ]
    }],
    "presets": [
        {
            "name": "Image Text"
        }
    ]
}
{% endschema %}