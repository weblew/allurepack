      }],
	  "blocks" : [{
			"type" : "megamenu",
			"name" : "Mega Menu",
			"settings" : [{
				"type" : "text",
				"label" : "Title",
				"id" : "title"
			},{
				"type" : "text",
				"label" : "Content",
				"id" : "content"
			},{
