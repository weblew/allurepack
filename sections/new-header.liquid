                      {% if link.links != blank %}
					  		{% assign mega_menu = blank %}
							{% for block in section.blocks %}
								{% assign block_menu = block.settings.menu_item | handle %}
								{% assign link_menu = link.title | handle %}
								{% if block_menu == link_menu %}
									{% assign mega_menu = block.settings %}
								{% endif %}
							{% endfor %}
							<div class="header-bottom-nav-link-menu  {% if mega_menu != blank %}megamenu{% endif %}">
								<div class="menu-inside">
								{% if mega_menu != blank %}
									<a href="{{mega_menu.link}}" class="header-bottom-nav-img" style="width:{{mega_menu.width}}px;">
										<img src="{{mega_menu.image | img_url:'master'}}" />
										<div class="mega-menu-content">
											<div class="mega-menu-title">{{mega_menu.title}}</div>
											<div>{{mega_menu.content}}</div>
										</div>
									</a>
								{% endif %}
								{%assign links = link.links %}
								{% if mega_menu.menu != blank %}
									{%assign links = mega_menu.menu.links %}
								{% endif %}
								<div class="{% if link.links.size > 8 %}columns{% endif %}">
 									{% for childlink in links %}
									<div>
										<a href="{{childlink.url}}" class="{% if childlink.links != blank %}link-title{% endif %}">{{childlink.title}}</a>
										{% if childlink.links != blank %}
											<div class="{% if childlink.links.size > 8 %}columns{% endif %}">
												{% for grandChildlink in childlink.links %}
                          {% if childlink.title contains 'Material'  %}
                            <style>
                              [data-material="{{grandChildlink.title}}"],
                              [data-materials="{{grandChildlink.title}}"]{
                                order:{{forloop.index}} !important;
                              }
                            </style>
                          {% endif  %}
                          {% if childlink.title contains 'By Type'  %}
                            <style>
                              [data-product_type="{{grandChildlink.title}}"]{
                                order:{{forloop.index}} !important;
                              }
                            </style>
                          {% endif  %}
												<a href="{{grandChildlink.url}}" class="">{{grandChildlink.title}}</a>
												{% endfor %}
											</div>
										{% endif %}
									</div>
									{% endfor %}
								</div>
							</div>
                        </div>
