                      <a href="{{link.url}}" {% if link.current or link.child_current %}class="active"{% endif %}>
                        {%  if link.title contains 'Gift Boxes' %}
                          {{link.title | replace:'Gift','<span>Gift</span>'}}
                          {%  elsif link.title contains 'Supplies' %}
                            {{link.title | replace:'Retail','<span>Retail</span>'}}
                            {% else  %}
                        {{link.title | replace:'Jewelry','<span>Jewelry</span>'}}
                        {% endif  %}
