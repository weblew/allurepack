				"label" : "Image",
				"id" : "image"
			},{
				"type" : "url",
				"label" : "Link",
				"id" : "link"
			},{
				"type" : "text",
				"label" : "Menu Item",
				"id" : "menu_item"
			},{
				"type" : "number",
				"label" : "Width",
				"id" : "width",
				"default" : 340
			},{
