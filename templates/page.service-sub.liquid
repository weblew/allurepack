{{ 'services-sub.scss.css' | asset_url | stylesheet_tag }}
<div class="page-width">
  
  <div>
    <h1 class="font-default">{{ page.title }}</h1>
  </div>
  
  <div class="">
    {{ page.content }}
  </div>
  {% if page.metafields.custom_content.image_1 != blank and page.metafields.custom_content.content_1 != blank %}
  <div class="top-content-row">
    <div class="flex flex-align-center flex-justify-between">
      <div class="flex-4">
      		<img src="{{page.metafields.custom_content.image_1}}">
      </div>
      <div class="flex-6">
      		<div class="top-content-row-content">
              {{page.metafields.custom_content.content_1}}
        	</div>
      </div>
    </div>
  </div>
  {% endif %}
  
  {% if page.metafields.custom_content.image_2 != blank and page.metafields.custom_content.content_2 != blank %}
  <div class="top-content-row">
    <div class="flex flex-align-center  flex-justify-between">
      
      <div class="flex-5">
      		<div class="top-content-row-content">
              {{page.metafields.custom_content.content_2}}
        	</div>
      </div>
      <div class="flex-4 text-right">
      		<img src="{{page.metafields.custom_content.image_2}}">
      </div>
    </div>
  </div>
  {% endif %}
 
</div>

{% if page.metafields.custom_content.top_printing_banner != blank %}
  <div class="top-printing-banner">
      {{page.metafields.custom_content.top_printing_banner}}
  </div>
{% endif %}

{% if page.metafields.custom_content.faq_questions != blank %}
  <div class="service-faq">
    <h2 class="text-center font-default">FAQ</h2>
    {% for question in page.metafields.custom_content.faq_questions %}
      <div>
        <div class="question">{{question}}</div>
        <div class="answer">
          {{page.metafields.custom_content.faq_answers[forloop.index0]}}
        </div>
      </div>
    {% endfor %}
  </div>
{% endif %}

{% if page.metafields.custom_content.colors_banner != blank %}
  <div class="colors-banner">
      <h2 class="text-center font-default">Colors</h2>
      <img src="{{page.metafields.custom_content.colors_banner}}"/>
  </div>
{% endif %}

{% if page.metafields.custom_content.casestudies_titles != blank %}
  <div class="service-faq">
    <h2 class="text-center font-default">CASE STUDIES</h2>
    {% for question in page.metafields.custom_content.casestudies_titles %}
      <div>
        <div class="question">{{question}}</div>
        <div class="answer">
          {{page.metafields.custom_content.casestudies_content[forloop.index0]}}
        </div>
      </div>
    {% endfor %}
  </div>
{% endif %}

{% if page.metafields.custom_content.testimonials != blank %}
