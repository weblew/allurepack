{% if page.metafields.custom_content.bottom_printing_banner != blank %}
  <div class="bottom-printing-banner">
      {{page.metafields.custom_content.bottom_printing_banner}}
  </div>
{% endif %}

{% if page.metafields.content.bottom_description %}
